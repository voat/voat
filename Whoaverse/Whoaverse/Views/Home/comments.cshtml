@model Whoaverse.Models.Message

@{
    string selectedSubverse = ViewBag.SelectedSubverse;

    int commentContributionPoints = 0;
    if (User.Identity.IsAuthenticated)
    {
        commentContributionPoints = Whoaverse.Utils.Karma.CommentKarma(User.Identity.Name);
    }
}

<style type="text/css">
    body > .content .link .rank {
        width: 3.2ex;
    }
</style>

<style type="text/css">
@if (User.Identity.IsAuthenticated && !Whoaverse.Utils.User.CustomCSSDisabledForUser(User.Identity.Name))
{
    Html.RenderAction("StylesheetForSelectedSubverse", "Subverses", new { selectedSubverse = selectedSubverse });
}
else if (!User.Identity.IsAuthenticated)
{
    Html.RenderAction("StylesheetForSelectedSubverse", "Subverses", new { selectedSubverse = selectedSubverse });
}
</style>

<div id="container">

    <!--
        display 1 submission with details and comments
    -->
    @if (!selectedSubverse.Equals("user"))
    {
        @Html.Action("SidebarForSelectedSubverseComments", "Subverses", new
   {
       selectedSubverse = selectedSubverse,
       showingComments = true,
       name = Model.Name,
       date = Model.Date,
       lastEditDate = Model.LastEditDate,
       submissionId = Model.Id,
       likes = Model.Likes,
       dislikes = Model.Dislikes,
       anonymized = Model.Anonymized       
   })
    }
    <style type="text/css">
@if (User.Identity.IsAuthenticated && !Whoaverse.Utils.User.CustomCSSDisabledForUser(User.Identity.Name))
{
    Html.RenderAction("StylesheetForSelectedSubverse", "Subverses", new { selectedSubverse = selectedSubverse });
}
    </style>

    <div class="content" role="main">

        <br /><br />

        @{
            //type 1 = message submission
            if (Model.Type == 1)
            {
                ViewBag.Title = Model.Title + " | " + selectedSubverse;
                ViewBag.Url = ViewBag.Url ?? HttpContext.Current.Request.Url.AbsoluteUri;
                ViewBag.Image = ViewBag.Image ?? System.Web.HttpContext.Current.Request.Url.Scheme + "/Graphics/whoaverse_padded.png";
                ViewBag.Description = ViewBag.Description ?? "whoaverse: the frontpage of the universe";
                @Html.Partial("_MessageSubmissionDetails", Model, new ViewDataDictionary { { "CCP", commentContributionPoints}, { "SubverseAnonymized", ViewBag.SubverseAnonymized } })
            }

            //type 2 = link submission
            if (Model.Type == 2)
            {
                ViewBag.Title = Model.Linkdescription + " | " + selectedSubverse;
                ViewBag.Url = ViewBag.Url ?? HttpContext.Current.Request.Url.AbsoluteUri;
                ViewBag.Description = ViewBag.Description ?? "whoaverse: the frontpage of the universe";

                //check if submission has a thumb, otherwise point to site logo
                if (Model.Thumbnail != null)
                {
                    ViewBag.Image = ViewBag.Image ?? System.Web.HttpContext.Current.Request.Url.Scheme + "://" + System.Web.HttpContext.Current.Request.Url.Authority + "/Thumbs/" + @Model.Thumbnail;
                }
                else
                {
                    ViewBag.Image = ViewBag.Image ?? System.Web.HttpContext.Current.Request.Url.Scheme + "/Graphics/whoaverse_padded.png";
                }

                @Html.Partial("_LinkSubmissionDetails", Model, new ViewDataDictionary { { "CCP", commentContributionPoints}, {"SubverseAnonymized", ViewBag.SubverseAnonymized } })
            }
        }

        @if (User.Identity.IsAuthenticated)
        //if user logged in, show add comment form
        {
            @Html.Partial("_AddComment", new ViewDataDictionary { { "messageId", Model.Id } })
        }

        <div class="menuarea">
            <div class="spacer">
                <span class="dropdown-title lightdrop">sort by: </span>
                <div class="dropdown lightdrop">
                    @if (ViewBag.StartingCommentId != null)
                    {
                        if (ViewBag.SortingMode != null)
                        {
                            <span class="selected">
                                <a href="/v/@Model.Subverse/comments/@Model.Id/@ViewBag.StartingCommentId" class="bylink" rel="nofollow">top</a>
                            </span>
                        }
                        else
                        {
                            <span class="selected">
                                <a href="/v/@Model.Subverse/comments/@Model.Id/@ViewBag.StartingCommentId?sort=new" class="bylink" rel="nofollow">new</a>
                            </span>
                        }
                    }
                    else
                    {
                        if (ViewBag.SortingMode != null)
                        {
                            <span class="selected">
                                <a href="/v/@Model.Subverse/comments/@Model.Id/" class="bylink" rel="nofollow">top</a>
                            </span>
                        }
                        else
                        {
                            <span class="selected">
                                <a href="/v/@Model.Subverse/comments/@Model.Id/?sort=new" class="bylink" rel="nofollow">new</a>
                            </span>
                        }
                    }
                </div>
            </div>
            <div class="spacer"></div>
        </div>

        @if (ViewBag.StartingCommentId != null)
        {
            // show comment tree for a single thread starting at passed starting comment id
            @Html.Partial("_SingleCommentTree", Model, new ViewDataDictionary { { "CCP", commentContributionPoints }, { "StartingCommentId", ViewBag.StartingCommentId }, { "SortingMode", ViewBag.SortingMode } })
        }
        else
        {
            @Html.Partial("_CommentTree", Model, new ViewDataDictionary { { "CCP", commentContributionPoints }, { "SortingMode", ViewBag.SortingMode } })
        }

    </div>
</div>
