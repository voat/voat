@model IEnumerable<Whoaverse.Models.SubverseAdmin>

<div class="content" role="main">

    <div class="row nomargin">
        <div class="well col-md-8">

            <h1>Subverse owner moderator management interface for: @ViewBag.SubverseName</h1>

            <br />
            <div class="alert alert-info">Use this area to add/edit/remove moderators for your subverse.</div>

            <div class="form-horizontal">
                <hr />
                 @Html.ActionLink("Add a new moderator", "AddModerator")
                <hr />
           
                <h1>Currently active moderators</h1>

                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th><b>Username</b></th>
                            <th><b>Clearance</b></th>
                            <th><b>Remove</b></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Username</td>
                                <td>@item.Power</td>
                                <td>@Html.ActionLink("Remove", "RemoveModerator", new { id = item.Id })</td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>

        </div>
    </div>
</div>