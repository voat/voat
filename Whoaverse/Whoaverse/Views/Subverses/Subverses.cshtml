@model PagedList.IPagedList<Whoaverse.Models.Subverse>

@using Whoaverse.Utils;

@{
    ViewBag.Title = "subverses";
    string sortingMode = ViewBag.SortingMode;
    string urlaction = "";

    if (sortingMode != "new")
    {
        urlaction = "index";
    }
    else
    {
        urlaction = "new";
    }
}

@using PagedList.Mvc;

<style type="text/css">
    body > .content .link .rank {
        width: 3.2ex;
    }
</style>

<div class="content" role="main">

    @if (sortingMode != "new")
    {
        <div class="panel panel-default">
            <div class="panel-heading">Top 200 subverses</div>
            <div class="panel-body">
                <p>Showing top 200 subverses ordered by number of subscribers.</p>
            </div>
        </div>
    }
    else
    {
        <div class="panel panel-default">
            <div class="panel-heading">Latest 200 subverses</div>
            <div class="panel-body">
                <p>Showing 200 most recently registered subverses.</p>
            </div>
        </div>
    }

    <br /><br />

    <div class="sitetable linklisting">

        @foreach (var subverse in Model)
        {
            @Html.Action("DetailsForSelectedSubverse", "Subverses", new { selectedSubverse = subverse.name });
        }

    </div>

    @if (Model.PageCount > 1)
    {
        @Html.PagedListPager(Model, page => Url.Action(urlaction, new { page }), WhoaversePagerOptions.PagedListRenderOptions());
    }

</div>
