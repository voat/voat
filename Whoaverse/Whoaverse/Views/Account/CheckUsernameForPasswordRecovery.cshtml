@using Microsoft.AspNet.Identity;
@using Recaptcha.Web.Mvc;

@model Whoaverse.Models.UsernameEntryForPasswordRecoveryModel

@{
    ViewBag.Title = "Password Recovery";
}

<div id="about-main" class="content about-page" role="main">

    <div class="row nomargin">
        <div class="well col-md-8">
            <h1>Password Recovery</h1>
            <hr />

            <section id="recoveryForm">
                @using (Html.BeginForm("CheckUsernameForPasswordRecovery", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">Are you a human?</div>
                        <div class="panel-body">
                            <p>Please re-type the text you see in the photo:</p>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        @Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean, language: "en")
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-4">
                            <input type="submit" value="Submit" class="btn-whoaverse" />
                        </div>
                    </div>
                }
            </section>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

    </div>
</div>
