@{
    var selectedSubverse = ViewBag.selectedSubverse;    
    var selectedSubverseName = ViewBag.selectedSubverseName;
    var action = ViewBag.action;
    bool? frontpage = ViewBag.frontpage;
    string sortingMode = ViewBag.sortingMode;

    var classHot = "";
    var classNew = "";
    var classTop = "";
    var classDiscussion = "disabled";
    var classLink = "disabled";

    switch (sortingMode)
    {
        case "new":
            classNew = "selected";
            classHot = "disabled";
            classTop = "disabled";
            break;
        case "top":
            classTop = "selected";
            classNew = "disabled";
            classHot = "disabled";            
            break;
        default:
            classHot = "selected";
            classNew = "disabled";
            classTop = "disabled";
            break;
    }
    
    if (action != null)
    {
        if (action == "link")
        {
            classHot = "disabled";
            classLink = "selected";
        }
        else
        {
            classHot = "disabled";
            classDiscussion = "selected";
        }
    }    

    if (frontpage.HasValue)
    {
        if (frontpage == true)
        {
            <ul class="tabmenu ">
                <li class="@classHot"><a href="@selectedSubverse" title="Show most popular submissions from default subverses.">Hot</a></li>
                <li class="@classNew"><a href="/new" title="Show latest submissions from default subverses.">New</a></li>
                <li class="disabled"><a href="~/v/all/new" title="Show latest submissions from all subverses.">Discover</a></li>
                <li class="@classDiscussion"><a href="/submit">Start a discussion</a></li>
                <li class="@classLink"><a href="/submit?linkpost=true">Share a link</a></li>
            </ul>
        }
    }
    else
    {
        <span class="hover pagename"><a href="@selectedSubverse">@selectedSubverseName</a></span>
        <ul class="tabmenu">
            <li class="@classHot"><a href="@selectedSubverse">Hot</a></li>
            <li class="@classNew"><a href="@selectedSubverse/new">New</a></li>
            <li class="@classTop"><a href="@selectedSubverse/top" title="Show all time top ranked submissions.">Top</a></li>
            <li class="@classDiscussion"><a href="@selectedSubverse/submit">Start a discussion</a></li>
            <li class="@classLink"><a href="@selectedSubverse/submit?linkpost=true">Share a link</a></li>
        </ul>
    }
}
