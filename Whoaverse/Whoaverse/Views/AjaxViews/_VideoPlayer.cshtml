@model Voat.Models.Message

@{
    // check the domain to select appropriate player
    string domain = UrlUtility.GetDomainFromUri(Model.MessageContent);

    if (domain == "youtube.com" || domain == "youtu.be")
    {
        var youtubeVideoId = UrlUtility.GetVideoIdFromUrl(Model.MessageContent);
        <iframe id="ytplayer" type="text/html" width="568" height="338"
                src="https://www.youtube.com/embed/@(youtubeVideoId)?autoplay=0&origin=http://voat.co"
                frameborder="0"></iframe>
    }

    if (domain == "vimeo.com")
    {
        var vimeoVideoId = UrlUtility.GetVideoIdFromUrl(Model.MessageContent);
        <iframe src="https://player.vimeo.com/video/@(vimeoVideoId)" width="568" height="338" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    }
}


