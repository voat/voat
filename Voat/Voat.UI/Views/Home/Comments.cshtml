@using Voat.Models;

@model Voat.Domain.Models.CommentSegment

@{
    string highLight = "";
    int commentContributionPoints = ViewBag.CCP ?? 0;
    Voat.Data.Models.Submission submission = ViewBag.Submission;
}

<style type="text/css">
    body > .content .link .rank {
        width: 3.2ex;
    }
</style>

<style type="text/css" id="custom_css">
@if (User.Identity.IsAuthenticated && !UserHelper.CustomCssDisabledForUser(User.Identity.Name))
{
    Html.RenderAction("StylesheetForSelectedSubverse", "Subverses", new { selectedSubverse = submission.Subverse });
}
else if (!User.Identity.IsAuthenticated)
{
    Html.RenderAction("StylesheetForSelectedSubverse", "Subverses", new { selectedSubverse = submission.Subverse });
}
</style>

<div id="container">
    @*
        display 1 submission with details and comments
    *@
    @if (!submission.Subverse.Equals("user"))
    {
        
        @Html.Action("SidebarForSelectedSubverseComments", "Subverses", new
       {
           selectedSubverse = submission.Subverse,
           showingComments = true,
           name = submission.UserName,
           date = submission.CreationDate,
           lastEditDate = submission.LastEditDate,
           submissionId = submission.ID,
           likes = submission.UpCount,
           dislikes = submission.DownCount,
           anonymized = submission.IsAnonymized,
           views = submission.Views,
           isDeleted = submission.IsDeleted
       })
    }

    <style type="text/css" id="custom_css">
    @if (User.Identity.IsAuthenticated && !UserHelper.CustomCssDisabledForUser(User.Identity.Name))
    {
        Html.RenderAction("StylesheetForSelectedSubverse", "Subverses", new { selectedSubverse = submission.Subverse });
    }
    </style>

    <div class="content" role="main">
        <br /><br />
        @Html.Partial("~/Views/Welcome/_FirstTimeVisitorWelcome.cshtml")

        @{
            //type 1 = message submission
            if (submission.Type == 1)
            {
                ViewBag.Title = submission.Title + " | " + submission.Subverse;
                ViewBag.Url = ViewBag.Url ?? HttpContext.Current.Request.Url.AbsoluteUri;
                ViewBag.Image = ViewBag.Image ?? HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + Settings.SiteLogo;
                ViewBag.Description = ViewBag.Description ?? Settings.SiteSlogan;
                @Html.Partial("~/Views/Shared/Submissions/_MessageSubmissionDetails.cshtml", submission, new ViewDataDictionary { { "CCP", commentContributionPoints }, { "SubverseAnonymized", ViewBag.SubverseAnonymized } })
            }

            //type 2 = link submission
            if (ViewBag.Submission.Type == 2)
            {
                ViewBag.Title = submission.LinkDescription + " | " + submission.Subverse;
                ViewBag.Url = ViewBag.Url ?? HttpContext.Current.Request.Url.AbsoluteUri;
                ViewBag.Description = ViewBag.Description ?? Settings.SiteSlogan;

                //check if submission has a thumb, otherwise point to site logo
                if (submission.Thumbnail != null)
                {
                    if (Settings.UseContentDeliveryNetwork)
                    {
                        ViewBag.Image = ViewBag.Image ?? HttpContext.Current.Request.Url.Scheme + "://cdn." + HttpContext.Current.Request.Url.Authority + "/thumbs/" + @submission.Thumbnail;
                    }
                    else
                    {
                        ViewBag.Image = ViewBag.Image ?? HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + "/Thumbs/" + @submission.Thumbnail;
                    }
                }
                else
                {
                    ViewBag.Image = ViewBag.Image ?? HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + Settings.SiteLogo;
                }

                @Html.Partial("~/Views/Shared/Submissions/_LinkSubmissionDetails.cshtml", submission, new ViewDataDictionary { { "CCP", commentContributionPoints }, { "SubverseAnonymized", ViewBag.SubverseAnonymized } })
            }
        }

        @if (User.Identity.IsAuthenticated)
        //if user logged in, show add comment form
        {
            @Html.Partial("_AddComment", new ViewDataDictionary { { "messageId", submission.ID } })
        }

        <div class="horizontal-line"></div>

        @* Show sort only if viewing all comments *@
        @if (ViewBag.StartingCommentId == null)
        {
            var sort = (Model.Sort == Voat.Domain.Models.SortAlgorithm.Top ? "new" : "top");
            <div class="menuarea">
                <div class="spacer">
                    <span class="dropdown-title lightdrop">sort by: </span>
                    <div class="dropdown lightdrop">
                        <span class="selected">
                            <a href="/v/@ViewBag.SubverseName/comments/@Model/@sort" class="bylink" rel="nofollow">@sort</a>
                        </span>
                    </div>
                </div>
                <div class="spacer"></div>
            </div>
        }

        @{
            string view = (ViewBag.StartingCommentId != null ? "~/Views/Home/_SingleCommentTree.cshtml" : "~/Views/Home/_CommentTree.cshtml");
        }

        @Html.Partial(view, Model, new ViewDataDictionary {
                    { "SavedCommentCache", ViewBag.SavedCommentCache },
                    { "VoteCache", ViewBag.VoteCache },
                    { "CCP", ViewBag.CCP },
                    { "SortingMode", ViewBag.SortingMode },
                    { "NestingCount", 0 },
                    { "StartingCommentId", ViewBag.StartingCommentId },
                    { "Subverse", ViewBag.Subverse },
                    { "Submission", ViewBag.Submission },
                    { "CommentToHighlight", ViewBag.CommentToHighLight } }
            )
    </div>
</div>
