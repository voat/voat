@using Voat.Models

@model CommentBucketViewModel

@if (!User.Identity.IsAuthenticated)
{
    <div class="menuarea">
        <div class="spacer">
            <span class="label label-default">want to join the discussion? <a href="javascript:void(0)" onclick="mustLogin();" class="login-required">login</a> or <a href="/account/register">register</a> in seconds.</span>
        </div>
    </div>
}
<div class="menuarea">
    <h2><span class="label label-default">@(Model.Sort == CommentSort.New ? "newest" : "top") comments</span></h2>
</div>
<div class='commentarea'>
    <div id="siteTable" class="sitetable nestedlisting">
        @Html.Partial("~/Views/Shared/Comments/_CommentBucket.cshtml", Model, new ViewDataDictionary {
            { "VoteCache", ViewBag.VoteCache },
            { "CCP", ViewBag.CCP }})
    </div>
</div>
