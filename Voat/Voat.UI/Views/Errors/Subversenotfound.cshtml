@model HandleErrorInfo

@{
    ViewBag.Title = "Whoops!";
}

<div class="content error-page" role="main">

    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Whoops!</h3>
            </div>
            <div class="panel-body centered">
                <h1>The subverse you were looking for could not be found. Are you sure you typed it right? Also, I may have umm... eaten it.</h1>
            </div>
        </div>
        <p class="text-center">
            <a href="~/"><img src="~/Graphics/404.png" style="width:100%;max-width:450px;" class="img-responsive center-block" alt="Whoopsie Daisy!" /></a>

        </p>
        <p class="panel-footer centered">
            Pushing F5 repeatedly will not help.
        </p>
    </div>

</div>
