@model IEnumerable<Voat.Domain.Models.SubverseModerator>

@{
    if (Model.Any())
    {
        <div class="spacer">
            <div class="titlebox footer rounded">
                <h2 class="hover whoaversename">
                    This user is moderating:
                </h2>
                <div class="bottom">
                    @foreach (var item in Model)
                    {
                        string descriptor = "";
                        string name = "";
                        try
                        {
                            name = item.Level.ToString();
                            descriptor = String.Format(" [{0}]", name.First().ToString());
                        }
                        catch { }

                        <p>
                            <a href="/v/@item.Subverse" title="@name">@item.Subverse</a><span class="userattrs" title="@name">@descriptor</span>
                        </p>
                    }
                </div>
                <div class="clear">
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="spacer">
            <div class="titlebox footer rounded">
                <h2 class="hover whoaversename">
                    This user is moderating:
                </h2>
                <div class="bottom">
                    <p class="h6">
                        This user is not moderating any subverses.
                    </p>
                </div>
            </div>
        </div>
    }
}

