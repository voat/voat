@{
    var classHot = "";
    var classActive = "";
    var classNew = "";
    var classSearch = "";
    var classSubscribed = "";

    string subversesView = ViewBag.SubversesView;
    string sortingMode = ViewBag.sortingMode;

    switch (sortingMode)
    {
        case "new":
            classNew = "selected";
            classActive = "disabled";
            classHot = "disabled";
            classSubscribed = "disabled";
            classSearch = "disabled";
            break;
        case "active":
            classActive = "selected";
            classNew = "disabled";
            classHot = "disabled";
            classSubscribed = "disabled";
            classSearch = "disabled";
            break;
        case "search":
            classSearch = "selected";
            classActive = "disabled";
            classNew = "disabled";
            classHot = "disabled";
            classSubscribed = "disabled";
            break;
        default:
            classHot = "selected";
            classNew = "disabled";
            classActive = "disabled";
            classSearch = "disabled";
            classSubscribed = "disabled";
            break;
    }

    if (subversesView != null)
    {
        switch (subversesView)
        {
            case "search":
                classSearch = "selected";
                classHot = "disabled";
                classNew = "disabled";
                classSubscribed = "disabled";
                break;
            default:
                classSubscribed = "selected";
                classHot = "disabled";
                classNew = "disabled";
                classSearch = "disabled";
                break;
        }
    }
}

<ul class="tabmenu">
    <li class="@classHot"><a href="/subverses">Popular</a></li>
    <li class="@classActive"><a href="/subverses/active">Active</a></li>
    <li class="@classNew"><a href="/subverses/new">New</a></li>
    <li class="@classSubscribed"><a href="/subverses/subscribed">Subscribed</a></li>
    <li class="@classSearch"><a href="/subverses/search">Search</a></li>
</ul>
