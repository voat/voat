@{
    var sortingMode = ViewBag.sortingMode;
    var selectedSubverse = ViewBag.selectedSubverse;
    var selectedDomain = ViewBag.selectedDomain;

    var classHot = "selected";
    var classNew = "disabled";

    if (sortingMode != null)
    {
        if (sortingMode.Equals("new"))
        {
            classHot = "disabled";
            classNew = "selected";
        }
    }
}

<span class="hover pagename"><a href="@selectedSubverse">@selectedDomain</a></span>
<ul class="tabmenu ">
    <li class="@classHot"><a href="@selectedSubverse">Hot</a></li>
    <li class="@classNew"><a href="/domains/@selectedDomain/new">New</a></li>
    <li class="disabled submit-link"><a href="/submit?linkpost=true">Share a link</a></li>
    <li class="disabled submit-text"><a href="/submit">Discuss</a></li>
</ul>