@using Voat.Models.ViewModels

<div class="side">

    @Html.Partial("_SearchMinimal", new SearchViewModel())

    <div class="spacer">
        <a href="/submit?linkpost=true" class="btn-whoaverse btn-block contribute submit-link">
            Share a link
        </a>
    </div>
    <div class="spacer">
        <a href="/submit" class="btn-whoaverse btn-block contribute submit-text">
            Discuss
        </a>
    </div>
    <div class="spacer">
        <div class="sidebox">
            <a href="/v/all/top" class="btn-whoaverse btn-block contribute">
                Top Submissions
            </a>
        </div>
    </div>
    <div class="spacer">
        <div class="sidebox create">
            <a href="/subverses/create" class="btn-whoaverse btn-block">
                Create your own subverse
            </a>
        </div>
    </div>
    @if (!Settings.SetsDisabled)
    {
        <div class="spacer">
            <div class="sidebox create">
                <a href="/sets/create" class="btn-whoaverse btn-block">
                    Create a new set
                </a>
            </div>
        </div>
    }
    @*<div class="spacer">
        <div class="sidebox">
            <a href="/p/partnerprogram" class="btn-whoaverse btn-block">
                Become a partner
            </a>
        </div>
    </div>*@
    @if (!Settings.SignalRDisabled)
    {
        <div class="spacer">
            <div class="sidebox">
                <a href="chat/whatever" class="btn-whoaverse btn-block" target="_blank">
                    Voat Chat (Alpha)
                </a>
            </div>
        </div>
    }
    <div class="spacer">
        <div class="sidebox">
            <a href="/subverses" class="btn-whoaverse btn-block">
                Explore Voat
            </a>
        </div>
    </div>
    <div class="spacer">
        <div class="sidebox">
            <a href="/random" class="btn-whoaverse btn-block">
                Random Subverse
            </a>
        </div>
    </div>
    <div class="spacer">
        <div class="sidebox">
            <a href="/randomnsfw" class="btn-whoaverse btn-block">
                Random NSFW Subverse
            </a>
        </div>
    </div>
    @if (!Settings.SetsDisabled)
    {
        <div class="spacer">
            <div class="sidebox">
                <a href="/sets" class="btn-whoaverse btn-block">
                    Explore Sets
                </a>
            </div>
        </div>
    }
    <div class="spacer spacersection">
        <div class="alert-h1">
            Most viewed in the past 24 hours
        </div>
        <div>
            @{
                Html.RenderAction("TopViewedSubmissions24Hours", "Subverses");
            }
        </div>
    </div>
    <div class="spacer">
        <div class="sidecontentbox ">
            <div class="title">
                <h1 class="alert-h1">Unofficial Voat Mobile Apps</h1>
            </div>
            <div class="sidecontentbox content">
                <p>
                    We love these two, unofficial Android apps for Voat: <a href="https://play.google.com/store/apps/details?id=net.lumigo.vobrowser2">voBrowser</a> and <a href="https://play.google.com/store/apps/details?id=com.SpaceMonkey.Boats">Boats for Voat</a>.
                </p>
                <p>If you see another Voat apps in the wild, do let us know!</p>
            </div>
        </div>
    </div>
    <div class="spacer">
        <div class="sidecontentbox ">
            @{
                Html.RenderAction("RenderAd", "Ad");
            }
        </div>
    </div>
    <div class="spacer">
        <div class="sidecontentbox ">
            <div class="title">
                <h1 class="alert-h1">Help us keep Voat alive</h1>
            </div>
            <div class="sidecontentbox content">
                <img src="https://voat.co/graphics/jumping_goat.png" style="border:0" />
                <p>Weeee! Voat is flying on our own now. It feels like Freedom.</p>
                <p>
                    If you can, please donate to help us keep Voat running and free. As a thank you, we will display a donor badge on your profile.
                </p>
                <p>
                    You can also <a href="https://www.coinbase.com/voat">donate Bitcoin</a>. On checkout, please mention your Voat username if you want the donor badge.
                </p>
                <form name="PrePage" method="post" action="https://Simplecheckout.authorize.net/payment/CatalogPayment.aspx">
                    <input type="hidden" name="LinkId" value="816205ea-70d4-4a37-9541-f4a7aeafa0b1" />
                    <input type="submit" value="Donate" class="btn-whoaverse btn-block contribute" />
                </form>
            </div>
        </div>
    </div>

</div>
