@{
    int commentId = Convert.ToInt32(ViewData["CommentId"]);
}

<li>
    <form class="toggle report-button active" action="#" method="get">
        <input class="active" name="executed" value="reported" type="hidden">
        <span class="option main active">
            <a href="javascript:void(0)" class="togglebutton" onclick="return toggle(this, @commentId)">report spam</a>
        </span>
        <span class="option error">
            are you sure?  <a href="javascript:void(0)" class="yes" onclick="reportcomment(this, @commentId)">yes</a> / <a href="javascript:void(0)" class="no" onclick="return toggleback(this)">no</a>
        </span>
    </form>
</li>
