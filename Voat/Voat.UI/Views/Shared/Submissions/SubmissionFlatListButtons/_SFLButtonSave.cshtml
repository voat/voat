@{
    int submissionId = Convert.ToInt32(ViewData["submissionId"]);
    if (User.Identity.IsAuthenticated)
    {
        string loggedInUserName = User.Identity.Name;

        //returns true if user has saved this post
        var savedOrNot = Saving.CheckIfSaved(loggedInUserName, submissionId);
        var saveString = savedOrNot == true ? "unsave" : "save";
        <span class="option main active">
            <a href="javascript:void(0)" class="togglebutton savelink" onclick="return toggleSaveSubmission(@submissionId)">@saveString</a>
        </span>
    }
}