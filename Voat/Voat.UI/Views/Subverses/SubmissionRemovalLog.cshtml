@model PaginatedList<Voat.Data.Models.SubmissionRemovalLog>

@{
    ViewBag.Title = "Moderator submission removal log";
    string submissionClass = "";
}

<div id="container">
    <div class="side">
        <div class="spacersection spacer">
            <div class="alert-h1">
                Moderator submission removal log
            </div>
            <div>
                <span>
                    Total moderator-removed submissions in this subverse: @Model.Count
                </span>
            </div>
        </div>
    </div>

    <div class="content" role="main">
        <div class="sitetable linklisting">
            @if (Model.Count < 1)
            {
                <span>There are no moderator-removed submissions in this subverse.</span>
            }
            else
            {
                <div id="removedSubmissionsList" class="">
                    @foreach (var logItem in Model)
                    {
                        <div id="logItem" class="logItem alert-singlethread">
                            <p>Removed by @logItem.Moderator at: @logItem.CreationDate. Reason given: @logItem.Reason</p>
                        </div>

                        // type 2 = link, type 1 = message
                        submissionClass = logItem.Submission.Type == 1 ? "self" : "";

                        <div class="submission id-@logItem.Submission.ID link @submissionClass" data-fullname="@logItem.Submission.ID" data-ups="@logItem.Submission.Votes" data-downs="">
                            <p class="parent"></p>

                            @Html.Partial("_votingIconsSubmission", logItem.Submission, new ViewDataDictionary {{"CCP", 0}})
                            @Html.Partial("~/Views/Shared/Submissions/_Submission.cshtml", logItem.Submission)

                            <div class="child"></div>
                            <div class="clearleft">@*IE6fix*@</div>
                        </div>
                    }
                </div>
            }
        </div>
        <div class="pagination-container">
            <ul>
                @if (Model.HasPreviousPage)
                {
                    <li class="btn-whoaverse-paging">
                        @Html.RouteLink("‹ prev", "subverseSubmissionRemovalLog", new { page = (Model.PageIndex - 1) }, new { rel = "prev" })
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="btn-whoaverse-paging">
                        @Html.RouteLink("next ›", "subverseSubmissionRemovalLog", new { page = (Model.PageIndex + 1) }, new { rel = "next" })
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
